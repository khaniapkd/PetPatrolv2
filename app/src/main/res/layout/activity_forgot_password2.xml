<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF7A5A"
    tools:context="com.petpatrol.petpatrolapp.ForgotPassword.ForgotPassword">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="359dp"
        android:layout_height="161dp"
        android:layout_above="@+id/textViewPetPatrol"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTextForgot2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:background="@color/buttonColor"
        android:onClick="Back_login"
        android:text="@string/back_to_login"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="403dp" />


    <TextView
        android:id="@+id/textViewPetPatrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewTextForgot2"
        android:layout_alignEnd="@+id/imageViewLogo"
        android:layout_marginBottom="47dp"
        android:layout_marginEnd="98dp"
        android:gravity="center_horizontal"
        android:text="@string/pet_patrol"
        android:textColor="#FFFFFF"
        android:textSize="12pt"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="184dp" />

    <TextView
        android:id="@+id/textViewTextForgot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:text="@string/text_forgot_2"
        android:textSize="8pt"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="293dp" />


</RelativeLayout>
