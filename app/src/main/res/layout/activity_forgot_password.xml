<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF7A5A"
    tools:context="com.petpatrol.petpatrolapp.Login.MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="249dp"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewNotMember"
        android:layout_alignStart="@+id/textViewNotMember"
        android:layout_marginBottom="39dp"
        android:background="@color/buttonColor"
        android:onClick="send_email"
        android:text="@string/send_email"
        android:textColor="#FFFFFF"
        tools:ignore="OnClick" />


    <TextView
        android:id="@+id/textViewNotMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="@string/not_a_member" />

    <TextView
        android:id="@+id/textViewPetPatrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewForgotPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:gravity="center_horizontal"
        android:text="@string/pet_patrol"
        android:textColor="#FFFFFF"
        android:textSize="12pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewTextForgot"
        android:layout_alignStart="@+id/textViewPetPatrol"
        android:layout_marginBottom="19dp"
        android:text="@string/forgot_password"
        android:textSize="8pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewTextForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginBottom="44dp"
        android:gravity="center_horizontal"
        android:text="@string/text_forgot_1"
        android:textSize="8pt" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:hint="@string/email_address"
        android:inputType="textPersonName"
        android:textColorHint="#FFFFFF" />


</RelativeLayout>
